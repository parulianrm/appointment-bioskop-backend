generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Order {
  id           Int     @id @default(autoincrement())
  id_film      String
  nama_film    String
  nama_studio  String
  jam          String
  jumlah_kursi Int
  biaya_total  Int
  telephone    String?
  nama         String
  tanggal      String
  kursi        String
  status       String? @default("booked")
  statusId     Int?    @default(1)

  @@map("orders")
}
